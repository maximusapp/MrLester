<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme">
        <item name="android:fontFamily">@font/latoregular</item>
    </style>

    <style name="AppBarMain" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/latoregular</item>
    </style>

    <style name="AppBarNewList" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
        <item name="homeAsUpIndicator">@mipmap/icon_back24dp</item>
        <item name="android:fontFamily">@font/latoregular</item>

    </style>

    <style name="Animation.AppCompat.DropDownUp." parent="Animation.AppCompat.DropDownUp.">


    </style>

    <style name="SplashTheme"
        parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
